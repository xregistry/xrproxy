{
  "name": "xregistry-proxy",
  "version": "1.0.0",
  "description": "xRegistry reverse proxy for package registries",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc && npm run copy:shared",
    "copy:shared": "node -e \"require('fs').cpSync('../shared/filter', 'dist/shared/filter', { recursive: true })\"",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "axios": "^1.13.2",
    "morgan": "^1.10.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "yargs": "^18.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.5",
    "@types/yargs": "^17.0.32",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "rimraf": "^6.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}